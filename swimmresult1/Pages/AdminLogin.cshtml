@page
@model swimmresult1.Pages.AdminLoginModel
@{
    ViewData["Title"] = "Admin autorizācija";
}

<!-- Galvenā administrātora autorizācijas lapa -->

<!DOCTYPE html>
<html lang="lv">
<head>
    <meta charset="utf-8" />
    <title>Admin autorizācija</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f2f6fc;
        }

        header {
            display: flex;
            justify-content: space-between;
            padding: 20px 40px;
        }

        .title {
            font-size: 28px;
            font-weight: bold;
        }

        .back-btn {
            padding: 8px 16px;
            background-color: #2563eb;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

        .main {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 70vh;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            width: 300px;
        }

            .form-container input {
                margin-bottom: 10px;
                padding: 8px;
            }

        .submit-btn {
            padding: 8px;
            background-color: #16a34a;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            margin-bottom: 10px;
        }

        .error {
            color: red;
            margin-bottom: 10px;
            font-weight: bold;
        }

        hr {
            margin: 15px 0;
        }

        .new-admin {
            text-align: center;
            cursor: pointer;
            color: #2563eb;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <header>
        <div class="title">ADMIN AUTORIZĀCIJA</div>
        <button class="back-btn" onclick="location.href='/'">Uz sākumu</button>
    </header>

    <div class="main">
        <form method="post" class="form-container">

            <!-- Kļūdas paziņojums -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error">@Model.ErrorMessage</div>
            }

            <!-- Ievades lauki -->
            <input type="text" name="Vards" placeholder="Vārds" required />
            <input type="text" name="Uzvards" placeholder="Uzvārds" required />
            <input type="text" name="TreneraId" placeholder="Trenera ID" required />
            <input type="text" name="Klubs" placeholder="Kluba nosaukums" required />
            <input type="password" name="Parole" placeholder="Parole" required />

            <!-- Poga autorizācijai -->
            <button type="submit" class="submit-btn">Ievadīt</button>

            <hr />

            <!-- Pāreja uz jauna administratora reģistrāciju -->
            <div class="new-admin" onclick="location.href='/RegisterAdmin'">
                Jauns administrators
            </div>

        </form>
    </div>

</body>
</html>